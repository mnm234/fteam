<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:id="@+id/timeline_layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/timeline_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_account_circle_black_24dp"
            android:backgroundTint="#8ca3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeline_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeline_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hour ago"
                android:textColor="#5e5e5e" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="88dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timeline_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:inputType="textMultiLine"
            android:text="”UserName”さんが競技を投稿しました。"
            android:textColor="#000" />

        <android.support.v7.widget.CardView
            android:id="@+id/timeline_thumbnail"
            android:layout_width="256dp"
            android:layout_height="144dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/timeline_thumbnail_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
