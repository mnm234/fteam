<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCompeFragment">

    <LinearLayout
        android:id="@+id/newCompeFragmentArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="新競技名">
            <EditText
                android:id="@+id/newCompeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="競技のルール">
            <EditText
                android:id="@+id/newCompeRule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/makeCompeButton"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新しく競技を作成する"
            android:layout_gravity="center"/>


        <TextView
            android:textAlignment="center"
            android:id="@+id/submitMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>




        <ImageButton
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/camStartButton"
            android:background="@drawable/ic_video_24dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </LinearLayout>
</FrameLayout>