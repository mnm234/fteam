<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/existCompCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginVertical="8dp"
                android:id="@+id/existCompTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="競技名"
                android:textColor="#202020"
                android:textSize="20dp" />
                <TextView
                    android:id="@+id/existCompTimestampTextView"
                    android:layout_width="match_parent"
                    android:layout_marginVertical="4dp"
                    android:textAlignment="textEnd"
                    android:text="6s ago"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginBottom="8dp"
                android:id="@+id/existCompRuleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="競技のルールをここに表示します"
                android:textColor="#737373"
                android:textSize="12dp" />
            <TextView
                android:layout_marginBottom="8dp"
                android:id="@+id/existCompTagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="競技のタグをここに表示します。(例) #おもしろ #大食い　など"
                android:textColor="#737373"
                android:textSize="12dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
