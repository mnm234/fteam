<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="競技名"
            android:textAlignment="center"
            android:textSize="30dp" />
    </android.support.v7.widget.CardView>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top3Expand">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/compeName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="競技名"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginHorizontal="18dp"
                />
            <TextView
                android:id="@+id/compeTime1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/compeName"
                android:text="12:34:56"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/compeUserName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="ユーザ名"
                android:textSize="16dp"
                android:textStyle="italic"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@id/compeTime"/>

            <TextView
                android:id="@+id/compeName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="競技名"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginHorizontal="18dp"
                />
            <TextView
                android:id="@+id/compeTime2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/compeName"
                android:text="12:34:56"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/compeUserName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="ユーザ名"
                android:textSize="16dp"
                android:textStyle="italic"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@id/compeTime"/>

            <TextView
                android:id="@+id/compeName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="競技名"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginHorizontal="18dp"
                />
            <TextView
                android:id="@+id/compeTime3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/compeName"
                android:text="12:34:56"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/compeUserName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="ユーザ名"
                android:textSize="16dp"
                android:textStyle="italic"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@id/compeTime"/>
        </LinearLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>

</LinearLayout>