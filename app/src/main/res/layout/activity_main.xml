<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:titleTextColor="@color/bottom_navi_textColor"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/navi_color"
        tools:menu="@menu/menu_home"
        android:elevation="5dp"
        xmlns:tools="http://schemas.android.com/tools" />

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/searchtoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:elevation="5dp"
        android:visibility="gone"
        android:background="@color/search_bar_color"
        app:collapseIcon="@drawable/ic_arrow_back_24dp"
        app:titleTextColor="@color/search_bar_text_color" />


    <android.support.design.widget.BottomNavigationView
        android:elevation="8dp"
        android:id="@+id/navigation_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navi_color"
        app:itemTextColor="@drawable/bottom_navi_color"
        app:itemIconTint="@drawable/bottom_navi_color"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_weight="1"
        app:elevation="5dp"
        app:menu="@menu/bottom_navi_menu"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>